<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cwc.litenote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />	
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="com.google.android.apps.photos.permission.GOOGLE_PHOTOS"/>	
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />    
    <application
        android:name=".UilApplication"
        android:allowBackup="true"
		android:largeHeap="true"        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cwc.litenote.DrawerActivity"
            android:theme="@style/CustomTheme"
            android:label="@string/app_name">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.cwc.litenote.TabsHost" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cwc.litenote.TabsHost" 
            	  android:theme="@style/CustomTheme"/>
        <activity android:name="com.cwc.litenote.Note_addNewText" 
            	  android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.cwc.litenote.Note_addCameraPicture"/>        
        <activity android:name="com.cwc.litenote.Note_addReadyPicture"/>        
        <activity android:name="com.cwc.litenote.Note_addAudio" android:theme="@android:style/Theme.Translucent.NoTitleBar"/>        
        <activity android:name="com.cwc.litenote.Note_edit" />
        <activity android:name="com.cwc.litenote.Note_view_pager" />
        <activity android:name="com.cwc.litenote.Import_viewFileAct" />
        <activity android:name="com.cwc.litenote.ConfigAct" android:label="@string/settings"/>
        <activity android:name="com.cwc.litenote.SendMailAct" />
        <activity android:name="com.cwc.litenote.Export_toSDCardAct" />
        <activity android:name="com.cwc.litenote.Import_fromSDCardAct" />
        <activity android:name="com.cwc.litenote.GalleryGridAct" />
        <activity android:name="com.cwc.litenote.GalleryPagerAct" />
      	<activity android:name="com.cwc.litenote.SlideshowPlayer" android:theme="@android:style/Theme.NoTitleBar"/>
      		        
        <receiver
            android:name="com.cwc.litenote.DeleteFileAlarmReceiver"
            android:enabled="true"
             >
   		</receiver>     
        <receiver
            android:name="com.cwc.litenote.Note_view_pager_buttons_controller"
            android:enabled="true" />        		
   </application>

</manifest>
